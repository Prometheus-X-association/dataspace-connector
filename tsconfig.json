{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": false,
        "outDir": "dist",
        "allowJs": true,
        "lib": ["ES2021.String", "ES7", "dom"],
        // "typeRoots": ["./src/types"], // what for here ?
        "resolveJsonModule": true,
        "types": ["node", "mocha", "chai"]
    },
    "include": ["src/**/*", "src/config.json"]
}
