{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "allowJs": true,
    "lib": [
      "ES2021.String",
      "ES7",
      "dom"
    ],
    "typeRoots": ["./src/types"],
    "resolveJsonModule": true,
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  },
  "include": [
    "src/**/*",
    "scripts",
    "src/config.json"
  ]
}
